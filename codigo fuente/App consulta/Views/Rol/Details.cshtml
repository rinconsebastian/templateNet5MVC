@model App_consulta.Models.ApplicationRole
@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Detalles rol</h4>
<div class="form-group row">
    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Name)</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">Permisos</label>
    <div class="col-sm-9">
        <div class="row">
            @foreach (PermisoDataModel p in ViewBag.Permisos)
            {
            <div class="col-sm-6">
                <p class="form-control-plaintext font-weight-light">
                    @if (p.valor == "1")
                    {
                        <i class="fas fa-check-circle text-success"></i>
                    }
                    else
                    {
                <i class="fas fa-times-circle text-danger"></i>
                    }
                    @p.texto
                </p>
            </div>
            }
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Editar</a>
    </div>
    <div class="col-sm-3">
        <a asp-action="Index" class="btn btn btn-outline-dark btn-block">Volver</a>
    </div>
</div>