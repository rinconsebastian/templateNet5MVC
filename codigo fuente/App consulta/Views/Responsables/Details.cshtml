@model App_consulta.Models.Responsable

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "Dependencias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Detalles dependencia</h4>
<div class="form-group row">
    <label asp-for="Nombre" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">@Html.DisplayFor(model => model.Nombre)</p>
    </div>
</div>
<div class="form-group row">
    <label asp-for="IdJefe" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        @if (Model.IdJefe != null)
        {
            <p class="form-control-plaintext font-weight-light">
                @Html.DisplayFor(model => model.ResponsableJefe.Nombre)
            </p>
        }
    </div>
</div>
<div class="form-group row">
    <label asp-for="Editar" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <p class="form-control-plaintext font-weight-light">
            @(Model.Editar ? "Si" : "No")
        </p>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-block">Editar</a>
    </div>
    <div class="col-sm-3">
        <a asp-action="Index2" class="btn btn btn-outline-dark btn-block">Volver</a>
    </div>
</div>