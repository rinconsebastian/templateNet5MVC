@model App_consulta.Models.Configuracion

@{
    ViewData["Title"] = "Panel de control";
    ViewData["Subtitle"] = "";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Configuración general</h4>
@foreach (var prop in ViewBag.Props)
{
    if (prop.Name == "id") { continue; }
    String name = prop.Name;
    var value = prop.GetValue(Model);

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">@Html.DisplayName(name)</label>
        <div class="col-sm-9">
            @if (prop.PropertyType.Name == "Boolean")
            {
                <p class="form-control-plaintext font-weight-light"> @(value ? "Si" : "No")</p>
            }
            else
            {
                <p class="form-control-plaintext font-weight-light"> @value</p>
            }

        </div>
    </div>

}
<div class="form-group row">
    <div class="col-sm-3 offset-3">
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-outline-primary btn-block">Editar</a>
    </div>
</div>


