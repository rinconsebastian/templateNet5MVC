@using Microsoft.EntityFrameworkCore;

@inject App_consulta.Data.ApplicationDbContext db

@{
    var color = "#333333";
    var colorPrincipal = "#333333";
    var colorTextoPrincipal = "#ffffff";

    var conf = await db.Configuracion.FirstOrDefaultAsync();
    if (conf != null)
    {

        color = conf.colorTextoHeader != null && conf.colorTextoHeader != "" ? conf.colorTextoHeader: color;


        colorPrincipal = conf.colorPrincipal != null && conf.colorPrincipal != "" ? conf.colorPrincipal : colorPrincipal;

        colorTextoPrincipal = conf.colorTextoPrincipal != "" && conf.colorTextoPrincipal != null ? conf.colorTextoPrincipal : colorTextoPrincipal;

    }
}


